sudo mkdir -p /mnt/kernel
sudo mount -t 9p -o trans=virtio -oversion=9p2000.L kernel /mnt/kernel

cp -rf /mnt/kernel/samples/bpf/ndp_* ~/linux/samples/bpf
cd ~/linux/samples/bpf
make

for f in ndp_*.o
do
    objcopy -O binary -I elf32-little --only-section=nvme_ndpm "$f" ~/"${f%.*}".ebpf
done

cd ~

sudo 